@model OATools.ViewModel.HomePageViewModel
    @using OATools.Models 
@{
    ViewBag.Title = "Home Page";
}

<br />

<div class="jumbotron">
    <h1>Addiction Recovery: one day at a time.</h1>
    <p class="lead">Twelve Step Recovery tools and resources, all in one place, to get you 24 more hours.</p>
    <p class="lead">You never have to do anything alone, ever again.</p>
</div>

<br />

@{
        Random rnd = new Random();
        var sloganList = Model.Slogans.ToList();
        var index = rnd.Next(sloganList.Count);
        var currentSlogan = sloganList[index];
}


    <div class="row">
        <div class="col-md-4">
            <h2>Reading Links</h2>
            <p>to free online readings of The Big Book and the Alcoholics Anonymous Daily Reflections</p>
            @foreach (var book in Model.BookTitles)
            {
                <div class="paddedBtn">
                    <button class="btn btn-secondary" data-toggle="modal" data-target="#links@(book.Id)">
                        @book.BookTitle
                    </button>
                </div>
                <div class="modal" id="links@(book.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @foreach (var link in Model.PdfLinks.Where(l => l.BookTitle == @book.BookTitle))
                                {
                                    <p><a class="btn btn-primary btn-lg btn-block" href="@link.Url" target="_blank">@link.Name</a></p>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            
            
            <div id="slogan" class="card text-white bg-primary mb-3 modalHover" style="max-width: 20rem; min-height: 270px;" onclick="GetSlogan()">

                <div class="card-header">Click anywhere in the box to see another slogan.</div>
                <div class="card-body">
                    <h4 id="currentSlogan" class="card-title">@currentSlogan.SloganText</h4>
                    <p id="program">@currentSlogan.AffiliatedProgram</p>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Click here for a full list of slogans.", "Slogans", "Home")
                </div>
            </div>

        </div>

        <div class="col-md-4">
            <div class="paddedBtn">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#steps">
                    Twelve Steps
                </button>
            </div>
            <div class="modal" id="steps" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            The Twelve Steps
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @foreach (var step in Model.Steps)
                            {
                                <h4>@step.StepNumber - @step.StepText</h4>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="paddedBtn">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#traditions">
                    Twelve Traditions
                </button>
            </div>
            <div class="modal" id="traditions" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            The Twelve Traditions
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @foreach (var step in Model.Traditions)
                            {
                                <h4>@step.TraditionNumber - @step.TraditionText</h4>
                                <p>@step.TraditionSummary</p>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="paddedBtn">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#promise">
                    Twelve Promises
                </button>
            </div>
            <div class="modal" id="promise" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            The Twelve Promises
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @foreach (var step in Model.Promises)
                            {
                                <h4>@step.PromiseNumber - @step.PromiseText</h4>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="paddedBtn">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#principle">
                    Twelve Principles
                </button>
            </div>
            <div class="modal" id="principle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            The Twelve Principles
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @foreach (var step in Model.Principles)
                            {
                                <h4>@step.StepId - @step.Virtue</h4>
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="paddedBtn">
                <button class="btn btn-secondary" data-toggle="modal" data-target="#tools">
                    Nine Tools
                </button>
                <br />
                <div class="modal" id="tools" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                The Nine Tools
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @foreach (var tool in Model.Tools)
                                {
                                    <h4>@tool.ToolText</h4>
                                    <p>@tool.ToolSummary</p>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section scripts
{
    <script>
        function GetSlogan() {
            let sloganList = @Html.Raw(Json.Encode(Model.Slogans));
            let index = '@index';

            let length = sloganList.length;
            let newIndex = Math.floor(Math.random() * length);

            document.getElementById("currentSlogan").innerHTML = sloganList[newIndex].SloganText;

            if (sloganList[newIndex].AffiliatedPrgram) 
                document.getElementById("program").innerHTML = sloganList[newIndex].AffiliatedPrgram;
        }
    </script>
}
    